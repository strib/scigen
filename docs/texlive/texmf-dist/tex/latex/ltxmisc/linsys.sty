\newcounter{@dingctr}
\newcommand{\@wding}{\ding{\value{@dingctr}}\stepcounter{@dingctr}}
\newcommand{\@dinglabel}{\@wding}
\newenvironment{linsys}[1]{%
\setcounter{@dingctr}{192}%
\begin{tabular}{!{\@dinglabel}*{#1}{\@R\@C}\@R}}%
{\end{tabular}\setcounter{@dingctr}{192}}
\makeatother
\endinput
