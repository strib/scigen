\newcommand*{\leftharpoondownfill@}{%
  \arrowfill@\leftharpoondown\relbar\relbar
}
%    \end{macrocode}
%    \end{macro}
%    \begin{macro}{\rightharpoonupfill@}
%    \begin{macrocode}
\newcommand*{\rightharpoonupfill@}{%
  \arrowfill@\relbar\relbar\rightharpoonup
}
